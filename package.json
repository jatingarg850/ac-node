{
  "name": "server-node",
  "version": "1.0.0",
  "description": "Node.js server with PostgreSQL integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.js",
    "deploy": "bash deploy.sh",
    "build": "mkdir -p dist && cp -r src/* dist/ && cp package.json dist/ && cp package-lock.json dist/",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 